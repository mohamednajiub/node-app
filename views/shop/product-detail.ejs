    <body>
        <%- include('../includes/navigation.ejs') %>

            <% if (product) { %>

                <main class="centered">
                    <h1>
                        <%= product.title %>
                    </h1>
                    <hr>
                    <div>
                        <img src="<%= product.imageUrl %>" alt="<%= product.title %>" width="300">
                    </div>
                    <h2>
                        <%= product.price %>
                    </h2>
                    <p>
                        <%= product.description %>
                    </p>
